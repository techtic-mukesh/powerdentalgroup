<section class="content-block-section" style="background-color: {{ section.settings.background_color }};">
  <div class="container">
    {% if section.index == 1 %}
   {% if section.settings.heading != blank %}
      <h1 class="content-block-title">{{ section.settings.heading }}</h1>
    {% endif %}
{% else %}
  {% if section.settings.heading != blank %}
      <h2 class="content-block-title">{{ section.settings.heading }}</h2>
    {% endif %}
{% endif %}

    <div class="top-button">
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
    <div class="block-items">
      {% for block in section.blocks %}
        <div class="block-item">
          {% if block.settings.policy_title != blank %}
            <h2 class="block-title">{{ block.settings.policy_title }}</h2>
          {% endif %}
          <div class="block-content-text">{{ block.settings.policy_content }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
    .content-block-section {
  padding: 60px 20px;
  text-align: center;
}
.content-block-section .container {
          max-width: 1280px;
          margin: 0 auto;
      }
      .content-block-title{
     font-size: 44px;
  font-weight: bold;
  margin-bottom: 40px;
    }
.content-block-section p {
    font-family: "Montserrat", sans-serif;
    font-size: 16px;
    line-height: 1.6;
    margin: 0 0 15px;
    line-height: 22px;
    letter-spacing: -.16px;
    color: #5b5b5b;
}
.block-items{text-align: left;}
.block-title {
    font-size: 36px;
    line-height: 1.3;
    text-transform: uppercase;
    letter-spacing: -.56px;
    margin: 0 0 10px;
}
.top-button {
    display: flex;
    justify-content: center;
}
.top-button .btn {
    color: #fff;
    background: linear-gradient(102deg,#42c5ef 0%,#0033a0 50%,#0033a0 50%,#42c5ef 100%);
    background-size: 200% 100%;
    background-position: 200% 100%;
    transition: background-position .7s;
    padding: 16px 24px;
    text-transform: uppercase;
    font-family: 'Montserrat';
    border-radius: 10px;
    font-size: 14px;
    line-height: 16px;
    box-shadow: 0px 6px 12px 0px rgba(0,0,0,.1);
    text-decoration: none;
    font-weight: 700;
    margin:0 0 25px 0;
}
.top-button .btn:hover{
background-position: 100% 0;}
</style>

{% schema %}
{
  "name": "Content Section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "RETURN ORDER FORM"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "RETURN POLICY"
    }
  ],
  "blocks": [
    {
      "type": "policy_item",
      "name": "Policy Item",
      "settings": [
        {
          "type": "text",
          "id": "policy_title",
          "label": "Title",
          "default": "POWER DENTAL PRODUCTS:"
        },
        {
          "type": "richtext",
          "id": "policy_content",
          "label": "Content",
          "default": "<p>Only instrument(s) that are unused, left unsterilized in their original Power Dental packaging...</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Content Section"
    }
  ]
}
{% endschema %}
