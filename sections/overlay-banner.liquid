<section
  class="overlay-banner-wrapper"
  style="background-image: url('{{ section.settings.banner_image | img_url: 'master' }}')"
>
  <div class="overlay-banner-content">
    <h2>{{ section.settings.heading }}</h2>
    {% if section.settings.button_text and section.settings.button_link %}
      <a 
        href="{{ section.settings.button_link }}" 
        class="btn" 
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
.overlay-banner-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60px 40px;
  flex-wrap: wrap;
}
.overlay-banner-content {
  max-width: 40%;
}
.overlay-banner-content h2 {
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 20px;
}
.overlay-banner-content .btn {
  padding: 12px 24px;
  text-decoration: none;
  font-weight: bold;
  border: 2px solid;
  display: inline-block;
  transition: all 0.3s ease;
}
.overlay-banner-content .btn:hover {
  opacity: 0.8;
}
.overlay-banner-image {
  max-width: 55%;
}
.overlay-banner-image img {
  width: 100%;
  height: auto;
  display: block;
}
@media (max-width: 768px) {
  .overlay-banner-wrapper {
    flex-direction: column;
    text-align: center;
  }
  .overlay-banner-content, .overlay-banner-image {
    max-width: 100%;
  }
  .overlay-banner-content h2 {
    font-size: 28px;
  }
}
</style>

{% schema %}
{
  "name": "Overlay Banner",
  "tag": "section",
  "class": "overlay-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "YOUR VISION, OUR EXPERTISE."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "LET'S COLLABORATE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Overlay Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}