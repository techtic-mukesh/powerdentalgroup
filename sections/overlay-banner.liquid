<section
  class="overlay-banner-section"
  style="background-image: url('{{ section.settings.banner_image | img_url: 'master' }}')"
>
  <div class="overlay-banner-content container">
    <h2 class="overlay-banner-title">{{ section.settings.heading }}</h2>
    {% if section.settings.button_text and section.settings.button_link %}
      <a
        href="{{ section.settings.button_link }}"
        class="btn"
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
     .overlay-banner-section {
      padding: 60px 20px;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
  }
      .overlay-banner-section .container {
          max-width: 1280px;
          margin: 0 auto;
      }
  .overlay-banner-content {
    max-width: 40%;
  }
  .overlay-banner-content h2 {
      font-weight: 300;
      margin-bottom: 20px;
      font-size: 44px;
      color: #fff;
      margin: 0 0 15px;
      letter-spacing: -.88px;
      text-transform: uppercase;
      line-height: 1.1;
  }
  .overlay-banner-content h2 strong{font-weight: bold;}
  .overlay-banner-title > *{margin: 0;}
  .overlay-banner-content .btn {
    padding: 12px 24px;
    text-decoration: none;
    font-weight: bold;
    border: 2px solid;
    display: inline-block;
    color: #fff;
    border: 2px solid #5b5b5b;
    transition: all 0.3s ease;
    box-shadow: 0px 6px 12px 0px rgba(0,0,0,.1);
    border-radius: 4px;
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    font-family: 'Montserrat';
  }
  .overlay-banner-content .btn:hover {
     color: #000;
    background: #fff;
    border: 2px solid #fff;
    box-shadow: 0px 6px 12px 0px rgba(0,0,0,.1);
  }
  @media (max-width: 1200px) {
    .overlay-banner-content h2 {
      font-size: 42px;
  }
}
   @media (max-width: 992px) {
.overlay-banner-content h2 {
      font-size: 38px;
  }
  .overlay-banner-section {
    padding: 50px 20px;
}
}
  @media (max-width: 768px) {
    .overlay-banner-wrapper {
      flex-direction: column;
      text-align: center;
    }
    .overlay-banner-content, .overlay-banner-image {
      max-width: 100%;
    }
    .overlay-banner-content h2 {
      font-size: 32px;
  }
  .overlay-banner-section {
    padding: 40px 20px;
}
  }
</style>

{% schema %}
{
  "name": "Overlay Banner",
  "tag": "section",
  "class": "overlay-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>YOUR VISION, OUR EXPERTISE.<p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "LET'S COLLABORATE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Overlay Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
