<script>
document.addEventListener('DOMContentLoaded', () => {
  const modal = document.getElementById('AddressEditModal');
  const modalContainer = document.getElementById('ModalFormContainer');
  const closeBtn = document.querySelector('.close-modal');
  let activeForm = null;
  let originalParent = null;

  // Open modal for "Add New Address"
  const addNewBtn = document.getElementById('AddNewAddressBtn');
  if (addNewBtn) {
    addNewBtn.addEventListener('click', () => {
      const formContainer = document.getElementById('AddAddress');
      if (!formContainer) return;

      originalParent = document.getElementById('AddNewAddressContainer');
      activeForm = formContainer;
      modalContainer.appendChild(formContainer);
      formContainer.style.display = 'block';
      modal.classList.add('active');
    });
  }

  // Open modal for "Edit Address"
  document.querySelectorAll('.edit-address-btn').forEach(button => {
    button.addEventListener('click', e => {
      const id = e.currentTarget.dataset.addressId;
      const formContainer = document.querySelector(`#EditAddress_${id}`);
      if (!formContainer) return;

      originalParent = document.querySelector(`[data-address-container="${id}"]`);
      activeForm = formContainer;
      modalContainer.appendChild(formContainer);
      formContainer.style.display = 'block';
      modal.classList.add('active');
    });
  });

  // Close modal and return form to original location
  function closeModal() {
    modal.classList.remove('active');
    if (activeForm && originalParent) {
      activeForm.style.display = 'none';
      originalParent.appendChild(activeForm);
      activeForm = null;
      originalParent = null;
      modalContainer.innerHTML = '';
    }
  }

  closeBtn.addEventListener('click', closeModal);
  modal.addEventListener('click', e => {
    if (e.target === modal) closeModal();
  });

  // Handle "Cancel" buttons
  document.addEventListener('click', e => {
    if (e.target.classList.contains('cancel-edit-btn') || e.target.classList.contains('cancel-add-btn')) {
      e.preventDefault();
      closeModal();
    }
  });

  // Handle delete button with confirmation
  document.querySelectorAll('.delete-address-btn').forEach(button => {
    button.addEventListener('click', e => {
      const target = e.currentTarget.dataset.target;
      const message = e.currentTarget.dataset.confirmMessage;
      
      if (confirm(message)) {
        // Create a form to delete the address
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = target;
        
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = '_method';
        input.value = 'delete';
        
        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
      }
    });
  });
});
</script>

