
<section class="resources-section">
  <div class="container">
    {% if section.settings.section_title != blank %}
      <h2 class="resources-title">{{ section.settings.section_title }}</h2>
    {% endif %}
    <div class="resources-grid">
      {% for block in section.blocks %}
        <div class="resource-col">
          <div class="resource-card" {{ block.shopify_attributes }}>
            {% if block.settings.card_link %}
              <a href="{{ block.settings.card_link }}" class="resource-card-title-link">
                <h3 class="resource-card-title"><span>{{ block.settings.card_title }}</span></h3>
              </a>
            {% else %}
              <h3 class="resource-card-title"><span>{{ block.settings.card_title }}</span></h3>
            {% endif %}
            <p class="resource-card-description">{{ block.settings.card_description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.resources-section {
  padding: 60px 20px;
  text-align: center;
}
.resources-section  .container{
  max-width: 1280px;
  margin: 0 auto;
}      
.resources-title {
  font-size: 40px;
  font-weight: 700;
  margin-bottom: 40px;
  text-transform: uppercase;
}

.resources-grid {
  display: flex;
  row-gap: 30px;
  margin: 0 -10px;
  flex-wrap: wrap;
}
.resources-grid .resource-col{width: 25%; padding: 0 10px;}
.resource-card-title:hover span:after {
    content: '>';
    margin-left: 15px;
    color:#fff;
}
.resource-card {
    border: 1px solid #ddd;
    padding: 25px 20px;
    text-align: left;
    transition: all 0.3s ease;
    background: #fff;
    height: 100%;
}

.resource-card:hover {
  box-shadow: 0 5px 15px rgba(0,0,0,0.08);
  transform: translateY(-3px);
}

.resource-card-title {
    font-size: 16px;
    font-weight: 700;
    position: relative;
    text-transform: uppercase;
    transition: color 0.3s ease;
    padding: 10px 0;
    margin: 0 0 15px;
    color: #0033a0;
}
.resource-card-title span:before {
    content: "";
    position: absolute;
    left: -20px;
    top: 0;
    width: 4px;
    height: 100%;
    background: #131313;

}
@keyframes movingBg {
    0% {
        background-position: 0 50%
    }

    50% {
        background-position: 100% 50%
    }

    100% {
        background-position: 0 50%
    }
}
.resource-card-title:hover span {
    color: #fff;
    position: relative;
    z-index: 1;
}
.resource-card-title:hover:before{
  content: "";
  position: absolute;
    left: -20px;
    top: 0;
    height: 100%;
        transition: width .5s ease-in-out;
    animation: movingBg 5s linear infinite;
   width: calc(100% + 40px);
background: linear-gradient(102deg,#42c5ef 0%,#0033a0 100%);}
.resource-card-title-link {
  text-decoration: none;
  color: inherit;
  display: inline-block;
  position: relative;
}

{% comment %} .resource-card-title-link::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -4px;
  width: 0%;
  height: 2px;
  background-color: #000;
  transition: width 0.3s ease;
}

.resource-card-title-link:hover::after {
  width: 100%;
}

.resource-card-title-link:hover .resource-card-title {
  color: #000;
} {% endcomment %}

.resource-card-description {
    font-size: 16px;
    line-height: 22px;
    color: #5b5b5b;
    margin: 0;
    font-weight: 400;
    font-family: var(--font-heading-family);
    letter-spacing: -.16px;
}
</style>

{% schema %}
{
  "name": "Resources Grid",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "RESOURCES"
    }
  ],
  "blocks": [
    {
      "type": "resource_card",
      "name": "Resource Card",
      "settings": [
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title",
          "default": "USPS RETURN LABEL"
        },
        {
          "type": "textarea",
          "id": "card_description",
          "label": "Card Description",
          "default": "Utilize our USPS labels to send your packages via United States Postal Service. Simply print the label and affix it to your package. It is $15.99 with use."
        },
        {
          "type": "url",
          "id": "card_link",
          "label": "Card Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Resources Grid",
      "category": "Content"
    }
  ]
}
{% endschema %}
