    },
    {
      "type": "url",
      "id": "video_webm",
      "label": "Video URL (WebM)",
      "info": "Direct URL to WebM video file for better browser compatibility"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster Image",
      "info": "Image to display before video loads"
    },
    {
      "type": "checkbox",
      "id": "video_autoplay",
      "label": "Autoplay Video",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "video_loop",
      "label": "Loop Video",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "video_muted",
      "label": "Mute Video",
      "default": true,
      "info": "Required for autoplay in most browsers"
    }
  ],
  "presets": [
    {
      "name": "Key Features",
      "category": "Custom"
    }
  ]
}
{% endschema %}