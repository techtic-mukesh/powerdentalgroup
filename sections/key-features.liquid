section.key-features .key-features__wrap .content ul br {
  display: none;
}
section.key-features .key-features__wrap .content ul li {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  color: #000;
font-family: Prompt;
font-size: 16px; 
font-style: normal;
font-weight: 400;
line-height: normal;
}
section.key-features .key-features__wrap .right-block span.bg-media {
  display: flex;
  aspect-ratio: 4/3.1;
  border-radius: 20px;
  overflow: hidden;
} 

/* Ensure video covers container properly */
section.key-features .key-features__wrap .right-block span.bg-media video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.key-features__wrap {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2rem;
  align-items: center;
}

.key-features .content ul {
  padding-left: 1.5rem;
  list-style: disc;
}

.key-features  .video-wrapper {
    position: relative;
    aspect-ratio: 4 / 3.1;
    overflow: hidden;
    border-radius: 20px;
}

.key-features  .video-thumbnail iframe {
  width: 100%;
  height: 100%;
  border-radius: 1rem;
}

