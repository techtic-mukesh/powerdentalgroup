<section class="power-servicing-process">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="process-heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="process-grid">
      {% for block in section.blocks %}
        <div class="process-item">
          {% if block.settings.step_image != blank %}
            <img
              src="{{ block.settings.step_image | img_url: 'master' }}"
              alt="Step {{ forloop.index }}"
              class="process-number"
            >
          {% endif %}
          {% if block.settings.title != blank %}
            <h3 class="process-title">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.description != blank %}
            <p class="process-desc">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>

  <style>
    .power-servicing-process {
      background: #f6f5f5;
      padding: 60px 0;
      text-align: center;
    }

    .process-heading {
      font-size: 32px;
      font-weight: 700;
      text-transform: uppercase;
      margin-bottom: 50px;
    }

    .process-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }

    .process-item {
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .process-number {
      max-width: 80px;
      margin: 0 auto 15px;
    }

    .process-title {
      font-size: 20px;
      color: #1e88e5;
      font-weight: 600;
      margin-bottom: 10px;
    }

    .process-desc {
      color: #333;
      font-size: 16px;
      line-height: 1.5;
    }

    @media (max-width: 767px) {
      .process-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Power Servicing Process",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Power Servicing - Our Process"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "step_image",
          "label": "Step Number Image (e.g. 01, 02, 03)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Inspection"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Step Description",
          "default": "Once we receive your instruments, a thorough evaluation is performed."
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Power Servicing Process",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
