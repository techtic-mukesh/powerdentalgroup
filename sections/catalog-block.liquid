<section class="e-catalog-section">
     <div class="container">
      {% if section.index == 1 %}
{% if section.settings.section_title %}
    <h1 class="e-catalog-title">{{ section.settings.section_title }}</h1>
  {% endif %}{% else %}
{% if section.settings.section_title %}
    <h2  class="e-catalog-title h2">{{ section.settings.section_title }}</h2>
  {% endif %}{% endif %}

  

  <div class="catalog-grid">
    {% for block in section.blocks %}
        <div class="catalog-col">
      <a 
        href="{{ block.settings.link }}" 
        class="catalog-card" 
        target="_blank"
          style="background-color: {{ block.settings.bg_color }}"
        {{ block.shopify_attributes }}
      >
        {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url: '299x387' }}" alt="{{ block.settings.title }}">
        {% endif %}
        {% if block.settings.title %}
          <div class="catalog-title" style="color: {{ block.settings.title_color }}"><span>{{ block.settings.title }}</span></div>
        {% endif %}
      </a>
      </div>
    {% endfor %}
  </div>
  </div>
</section>
<style>.e-catalog-section {
    padding: 60px 0;
    text-align: center;
}

.e-catalog-section .container {
    max-width: 1420px;
    margin: 0 auto;
    padding: 0 50px;
}

.e-catalog-section .e-catalog-title,
.e-catalog-section .e-catalog-title.h2 {
    font-size: 44px;
    font-weight: bold;
    margin-bottom: 45px;
    line-height: 1.3;
    text-transform: uppercase;
    margin: 0 0 25px;
    font-size: calc(var(--font-heading-scale) * 5.2rem);
}

.catalog-title span {
    position: relative;
    z-index: 1;
}

.catalog-grid {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -15px;
    row-gap: 30px;
    justify-content: center;
}

.catalog-grid .catalog-col {
    width: 50%;
    padding: 0 15px;
    height: 100%;
}

.catalog-card {
    display: block;
    text-decoration: none;
    padding: 30px 0;
    height: 100%;
    border-radius: 15px;
    position: relative;
}

.catalog-card:after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 6px;
    padding: 3px;
   background: linear-gradient(16deg, #42c5ef 0%, #0033a0 100%);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
}

.catalog-card:hover img {
    transform: scale(1.03);
}

