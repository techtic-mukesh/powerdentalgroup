@media (max-width: 1200px) {
    .e-catalog-section .e-catalog-title {
        font-size: 42px;
    }

    .catalog-title {
        font-size: 22px;
    }

    .e-catalog-section .e-catalog-title.h2 {
        font-size: 32px;
    }
}

@media (max-width: 992px) {
    .e-catalog-section .e-catalog-title {
        font-size: 38px;
        margin-bottom: 30px;
    }

    .e-catalog-section {
        padding: 50px 0;
    }

    .e-catalog-section .e-catalog-title.h2 {
        font-size: 28px;
    }

    .e-catalog-section .container{
        padding: 0 32px;
    }
}

@media (max-width: 768px) {
    .e-catalog-section .e-catalog-title {
        font-size: 32px;
        margin-bottom: 25px;
    }

    .catalog-title {
        font-size: 20px;
    }

    .catalog-card {
        padding: 20px 0;
    }

    .catalog-grid .catalog-col {
        width: 100%;
    }

    .e-catalog-section {
        padding: 40px 0;
    }

    .e-catalog-section .e-catalog-title.h2 {
        font-size: 24px;
    }
}

@media (max-width: 750px) {
    .e-catalog-section .container {
        padding: 0 30px;
    }
}

@media (max-width: 567px) {
    .e-catalog-section .container {
        padding: 0 15px;
    }
}
</style>
{% schema %}
{
  "name": "E-Catalog Display",
  "tag": "section",
  "class": "e-catalog-display",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "E-CATALOG"
    }
  ],
  "blocks": [
    {
      "type": "catalog_item",
      "name": "Catalog Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Catalog Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Catalog URL"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Catalog Title",
          "default": "Catalog Name"
        },
         {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#fff"
        },
          {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#fff"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "E-Catalog Display",
      "category": "Content"    
    }
  ]
}
{% endschema %}