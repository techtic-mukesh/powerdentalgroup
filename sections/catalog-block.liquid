<section class="e-catalog-section">
  {% if section.settings.section_title %}
    <h2>{{ section.settings.section_title }}</h2>
  {% endif %}

  <div class="catalog-grid">
    {% for block in section.blocks %}
      <a 
        href="{{ block.settings.link }}" 
        class="catalog-card" 
        target="_blank"
        {{ block.shopify_attributes }}
      >
        {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url: '299x387' }}" alt="{{ block.settings.title }}">
        {% endif %}
        {% if block.settings.title %}
          <div class="catalog-title">{{ block.settings.title }}</div>
        {% endif %}
      </a>
    {% endfor %}
  </div>
</section>
<style>
.e-catalog-section {
  padding: 60px 20px;
  text-align: center;
}
.e-catalog-section h2 {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 40px;
}
.catalog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  justify-content: center;
}
.catalog-card {
  display: block;
  text-decoration: none;
  color: inherit;
  transition: transform 0.3s ease;
}
.catalog-card:hover {
  transform: scale(1.03);
}
.catalog-card img {
    width: auto;
    height: auto;
    max-width: 100%;
}
.catalog-title {
    font-size: 28px;
    font-weight: 600;
    margin: 0;
    color: #0033a0;
    text-transform: uppercase;
    line-height: 1.3;
}
</style>
{% schema %}
{
  "name": "E-Catalog Display",
  "tag": "section",
  "class": "e-catalog-display",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "E-CATALOG"
    }
  ],
  "blocks": [
    {
      "type": "catalog_item",
      "name": "Catalog Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Catalog Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Catalog URL"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Catalog Title",
          "default": "Catalog Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "E-Catalog Display",
      "category": "Custom"    
    }
  ]
}
{% endschema %}