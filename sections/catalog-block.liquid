@keyframes movingBackground {
    0% {
        background-position: 0 50%
    }

    50% {
        background-position: 100% 50%
    }

    100% {
        background-position: 0 50%
    }
}

.catalog-card img {
    width: auto;
    height: auto;
    transition: transform 0.3s ease;
    max-width: 100%;
}

.catalog-title {
    font-size: 28px;
    font-weight: 600;
    margin: 0;
    color: #0033a0;
    text-transform: uppercase;
    line-height: 1.3;
        padding: 20px 0;
    /* border-left: 4px solid #131313; */
    position: relative;
    transition: all .4s ease-in-out;
}

