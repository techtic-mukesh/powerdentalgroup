    text-decoration: none;
}

.events-slider .swiper-pagination-clickable .swiper-pagination-bullet {
    width: 16px !important;
    height: 16px !important;
    border: 1px solid #a1a4b1 !important;
    border-radius: 39px;
    background: url();
