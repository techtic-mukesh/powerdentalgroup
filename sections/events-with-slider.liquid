{% schema %}
{
  "name": "Events with Slider & Menu",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "STAY IN THE KNOW"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Main Title",
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Your opportunity to learn is here..."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "View Upcoming Events"
    },
    { 
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slider Item",
      "settings": [
        {
          "type": "text",
          "id": "slide_title",
          "label": "Slide Title",
          "default": "Beauty meets function â€“ Stoggles partnership"
        },
        {
          "type": "richtext",
          "id": "slide_text",
          "label": "Slide Text",
        },
        {
          "type": "url",
          "id": "slide_link",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "slide_link_label",
          "label": "Link Label",
          "default": "Learn more"
        }
      ]
    },
    {
      "type": "menu_item",
      "name": "Resource Link",
      "settings": [
        {
          "type": "text",
          "id": "menu_label",
          "label": "Menu Label",
          "default": "Servicing Order Form"
        },
        {
          "type": "url",
          "id": "menu_link",
          "label": "Menu Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Events with Slider & Menu"
    }
  ]
}
{% endschema %}

<section class="events-slider-section">
  <div class="page-width">
    <div class="events-container">
      <!-- Left Text -->
      <div class="events-left">
        <h4 class="events-subtitle">{{ section.settings.subtitle }}</h4>
        <h2 class="events-title">{{ section.settings.title }}</h2>
        <p class="events-desc">{{ section.settings.description }}</p>
        {% if section.settings.button_label %}
          <a href="{{ section.settings.button_link }}" class="events-btn">{{ section.settings.button_label }}</a>
        {% endif %}
      </div>
  
      <!-- Middle Slider -->
      <div class="events-slider swiper" style="width: 100%;">
        <h3 class="latest-heading">
          The Latest
        </h3>
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% if block.type == 'slide' %}
            <div class="swiper-slide">
              <div class="slide-content">
                <h4>{{ block.settings.slide_title }}</h4>
                <p>{{ block.settings.slide_text }}</p>
                {% if block.settings.slide_link %}
                  <a href="{{ block.settings.slide_link }}" class="slide-link">{{ block.settings.slide_link_label }}</a>
                {% endif %}
              </div>
            </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
  
      <!-- Right Menu -->
      <div class="events-menu">
        <h4>Resources</h4>
        <ul>
          {% for block in section.blocks %}
            {% if block.type == 'menu_item' %}
              <li><a href="{{ block.settings.menu_link }}">{{ block.settings.menu_label }}</a></li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

