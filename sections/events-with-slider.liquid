        background: var(--Gradient-01, linear-gradient(102deg, #42c5ef 0%, #0033a0 100%));
}
.events-menu ul a:hover {
        background: var(--Gradient-01, linear-gradient(102deg, #42c5ef 0%, #0033a0 100%));
