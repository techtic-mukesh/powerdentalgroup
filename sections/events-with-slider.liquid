}

@media only screen and (max-width: 1200px) {
  events-container {
    grid-template-columns: 270px auto 275px;
    gap: 40px;
}

.events-slider .swiper-horizontal>.swiper-pagination-bullets, .events-slider .swiper-pagination-bullets.swiper-pagination-horizontal {
      right: 104px;
}
}

