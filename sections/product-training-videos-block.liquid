<section class="product-training-videos-section">
  <div class="container">
    {% if section.settings.section_title != blank %}
      <h2 class="product-training-videos-title">{{ section.settings.section_title }}</h2>
    {% endif %}
    <div class="product-training-videos-row">
      {% for block in section.blocks %}
        {% if block.settings.subtitle_title != blank %}
          <h3 class="product-training-videos-subtitle">{{ block.settings.subtitle_title }}</h3>
        {% endif %}
      {% endfor %}
      <div class="product-training-videos-grid">
        {% for block in section.blocks %}
          {% if block.settings.video_link != blank and block.settings.card_title != blank %}
            <div class="product-training-videos-col">
              <div class="product-training-videos-card {{ block.shopify_attributes }}">
                {% if block.settings.video_link %}
                  <div class="product-training-videos-video">
                    <iframe
                      width="560"
                      height="315"
                      src="{{ block.settings.video_link }}"
                      title="YouTube video player"
                      frameborder="0"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                      referrerpolicy="strict-origin-when-cross-origin"
                      allowfullscreen
                    ></iframe>
                  </div>
                {% endif %}
                {% if block.settings.card_title %}
                  <p>{{ block.settings.card_title }}</p>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .product-training-videos-section {
      padding: 0 20px 40px;
      text-align: center;
  }
  .product-training-videos-section .container {
      max-width: 1280px;
      margin: 0 auto;
  }
  .product-training-videos-title{
font-size: 44px;
  font-weight: 700;
  margin:60px 0 40px;
  text-transform: uppercase;}
  .product-training-videos-grid {
      display: flex;
      row-gap: 30px;
      margin: 0 -10px;
      flex-wrap: wrap;
  }
  .product-training-videos-grid .product-training-videos-col {
      width: 33.33%;
      padding: 0 10px;
  }
  .product-training-videos-subtitle {
    font-size: 30px;
    line-height: 1.3;
    text-transform: uppercase;
    letter-spacing: -.56px;
    margin:0 0 20px;
    text-align: left;
  }
  .product-training-videos-video {
    display: block;
    position: relative;
    padding-top: 56.25%;
    overflow: hidden;
  }
  .product-training-videos-video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
.product-training-videos-card  p {
    font-size: 16px;
    font-style: normal;
    font-weight: 300;
    line-height: 22px;
    letter-spacing: -.16px;
    color: #5b5b5b;
    margin: 3px 0 0;
}
@media (max-width: 1200px) {
      .product-training-videos-title{
font-size: 42px;}
  }
  @media (max-width: 992px) {
    .product-training-videos-grid .product-training-videos-col {
        width: 50%;
    }
    .product-training-videos-title{
font-size: 38px;
    margin: 50px 0 35px;}
  }
  .product-training-videos-subtitle {
    font-size: 26px;
  }
}
  @media (max-width: 768px) {
    .product-training-videos-grid .product-training-videos-col {
        width: 100%;
    }
    .product-training-videos-title {
        margin: 50px 0 30px;
    }
    .product-training-videos-title{
font-size: 32px;margin: 40px 0 30px;}
  }
   .product-training-videos-subtitle {
    font-size: 22px;
  }
}
</style>

{% schema %}
{
  "name": "Product Videos Grid",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
    }
  ],
  "blocks": [
    {
      "type": "product_title",
      "name": "Subtitle",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "subtitle_title",
          "label": "Subtitle",
        }
      ]
    },
    {
      "type": "product_videos_card",
      "name": "Product Videos Card",
      "settings": [
        {
          "type": "url",
          "id": "video_link",
          "label": "Video Url",
          "info": "Add YouTube Embed Link"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title",
          "default": "Power Dental USA Crown Removers - Dr. Daniel"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Videos Grid",
      "category": "Content"
    }
  ]
}
{% endschema %}
