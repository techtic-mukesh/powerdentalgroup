<section class="product-training-videos-section">
  <div class="container">
    {% if section.settings.section_title != blank %}
      <h2 class="product-training-videos-title">{{ section.settings.section_title }}</h2>
    {% endif %}
    <div class="product-training-videos-row">
      {% for block in section.blocks %}
        {% if block.settings.subtitle_title != blank %}
          <h3 class="product-training-videos-subtitle">{{ block.settings.subtitle_title }}</h3>
        {% endif %}
      {% endfor %}
      <div class="product-training-videos-grid">
        {% for block in section.blocks %}
          <div class="product-training-videos-col">
            <div class="product-training-videos-card {{ block.shopify_attributes }}">
              {% if block.settings.video_link %}
                <div class="product-training-videos-video">
                  <iframe
                    width="560"
                    height="315"
                    src="{{ block.settings.video_link }}"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    referrerpolicy="strict-origin-when-cross-origin"
                    allowfullscreen
                  ></iframe>
                </div>
              {% endif %}
              {% if block.settings.card_title %}
                <p>{{ block.settings.card_title }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .product-training-videos-section {
      padding: 64px 20px;
      text-align: center;
  }
  .product-training-videos-section .container {
      max-width: 1280px;
      margin: 0 auto;
  }
  .product-training-videos-grid {
      display: flex;
      row-gap: 40px;
      margin: 0 -10px;
      flex-wrap: wrap;
  }
  .product-training-videos-grid .product-training-videos-col {
      width: 25%;
      padding: 0 10px;
  }
  .product-training-videos-subtitle{
        font-size: 28px;
        line-height: 1.3;
        letter-spacing: -.56px;
        margin-bottom: 20px;
    }
    .product-training-videos-video{
        
    }
</style>

{% schema %}
{
  "name": "Product Videos Grid",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Power Crown Removers Training Videos Section Title",
      "default": "Power Crown Removers Training Videos"
    }
  ],
  "blocks": [
    {
      "type": "product_title",
      "name": "Subtitle Title",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "subtitle_title",
          "label": "Subtitle",
          "default": "Product Overview and Demonstration Videos for Power Crown Removers"
        }
      ]
    },
    {
      "type": "product_videos_card",
      "name": "Product Videos Card",
      "settings": [
        {
          "type": "url",
          "id": "video_link",
          "label": "Video Link",
          "info": "Add YouTube Embed Link"
        },
        {
          "type": "text",
          "id": "card_title",
          "label": "Card Title",
          "default": "Power Dental USA Crown Removers - Dr. Daniel"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Videos Grid",
      "category": "Content"
    }
  ]
}
{% endschema %}
