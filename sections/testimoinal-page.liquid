{% schema %}
{
  "name": "Testimonials Cards",
  "tag": "section",
  "class": "testimonial-cards-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What our Clients say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Testimonial quote",
          "default": "Your testimonial text goes here..."
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Testimonial text"
        },
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Client Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Client Name",
          "default": "Dr. John Doe"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Client Location",
          "default": "California, USA"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Testimonials Cards"
    }
  ]
}
{% endschema %}

