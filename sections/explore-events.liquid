
<section class="our-events" style="background-color: {{ section.settings.background_color }};">
    <div class="page-width">
        <div class="title-wrap">
            <p class="subheading">{{ section.settings.subheading }}</p>
            <h2>{{ section.settings.heading }}</h2>
            {% if section.settings.content %}
            <div class="content">
                {{ section.settings.content }}
            </div>
            {% endif %}
        </div>

        <div class="event-wrap">
         {% for block in section.blocks %}
            <div class="event-item">
                <img src="{{ block.settings.image | img_url: '' }}'" alt="">
                <div class="event-info">
                    <h3>{{ block.settings.label }}</h3>
                    {{ block.settings.info }}

                    <a href="{{ block.settings.rgsurl }}" target="_blank" class="button button-secondary transparent">
                        Register Now
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>

        {% if  section.settings.btnurl %}
        <div class="bottom-btn">
            <a href="{{ section.settings.btnurl }}" class="button button--secondary">
                <span>{{ section.settings.btntext }}</span>
                {%  render 'button-arrow-primary' %}
            </a>
        </div>
        {% endif %}
    </div>
</section>

<style>
    section.our-events {
    display: inline-block;
    width: 100%;
    vertical-align: top;
    padding: 59.85px 0 66.28px;
}

section.our-events .title-wrap {
    text-align: center;
    margin: 0 0 30px;
}

section.our-events .title-wrap p.subheading {
    margin: 0 0 15px;
    width: 100%;
    position: relative;
    font-size: 18px;
    letter-spacing: 0.15em;
    line-height: 27px;
    text-transform: uppercase;
    font-weight: 600;
    font-family: Prompt;
    background: linear-gradient(90deg, #42c5ef, #0033a0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
}

section.our-events .title-wrap p.subheading:before, section.our-events .title-wrap p.subheading:after {
    content: '';
    width: 20px;
    height: 2px;
    display: inline-block;
    background: linear-gradient(90deg, #42C5EF 0%, #0033A0 100%), #141132;
}

.event-wrap {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
}

.event-wrap .event-item {
    width: 100%;
    border-radius: 10px;
    border: 1px solid #DCDCDC;
    background: #FFF;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.event-wrap .event-item img {
    width: 100%;
    height: 246px;
    object-fit: cover;
    object-position: center;
}

.event-wrap .event-item .event-info {
    padding: 30px;
}

.event-wrap .event-item .event-info h3 {
    color: #141132;
    font-family: Montserrat;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 20px; /* 100% */
    text-transform: uppercase;
    margin: 0 0 10px;
}

.event-wrap .event-item .event-info p {
    margin: 0;
    color: #141132;
    font-family: Prompt;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 22px; /* 137.5% */
}

.event-wrap .event-item .event-info a.button.button-secondary.transparent {
    margin: 16px 0 0;
    background: linear-gradient(90deg, #42C5EF 0%, #0033A0 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    border-radius: 10px;
    border: 1px solid #141132;
    border-radius: 10px;
    border: 1px solid #141132;
    color: #FFF;
    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    transition: all .4s ease-in-out;
}

.event-wrap .event-item .event-info a.button.button-secondary.transparent:after {
    display: none;
}

section.our-events .bottom-btn {
    text-align: center;
    margin: 30px 0 0;
}

.event-wrap .event-item .event-info a.button.button-secondary.transparent:hover {
    background: linear-gradient(90deg, #42c5ef, #0033a0), linear-gradient(0deg, #fff 0% 100%), linear-gradient(90deg, #42c5ef, #0033a0);
    color: #fff;
    -webkit-text-fill-color: #fff;
    border: unset;
}

</style>


{% schema %}
{
  "name": "Events",
  "tag": "section",
  "settings": [
    {
    "type": "color",
    "id": "background_color",
    "label": "Background Color",
    "default": "#ffffff"
    },
     {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
     {
      "type": "url",
      "id": "btnurl",
      "label": "Button Url"
    },
     {
      "type": "text",
      "id": "btntext",
      "label": "Button text"
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Event",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Event Name"
        },
        {
          "type": "richtext",
          "id": "info",
          "label": "Event Info"
        },
        {
          "type": "url",
          "id": "rgsurl",
          "label": "Register Url"
        }
      ]
    }
  ],
  "max_blocks": 15,
  "presets": [
    {
      "name": "Events",
      "category": "Custom"
    }
  ]
}
{% endschema %}