{% schema %}
{
  "name": "Resources Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "RESOURCES"
    }
  ],
  "blocks": [
    {
      "type": "resource_item",
      "name": "Resource Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Resource Title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Resources Grid",
      "category": "Custom Sections",
      "blocks": [
        { "type": "resource_item" },
        { "type": "resource_item" },
        { "type": "resource_item" }
      ]
    }
  ]
}
{% endschema %}

<section class="resources-grid-section">
  <div class="resources-grid-container">
    {% if section.settings.heading != blank %}
      <h2 class="resources-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="resources-grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="resource-card">
          {% if block.settings.icon != blank %}
            <div class="resource-icon">
              <img src="{{ block.settings.icon | image_url: width: 80 }}" alt="{{ block.settings.title }}">
            </div>
          {% endif %}
          <div class="resource-title">{{ block.settings.title }}</div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.resources-grid-section {
  padding: 60px 20px;
  text-align: center;
}
.resources-grid-container{
  box-sizing: border-box;
  margin-left: auto;
  margin-right: auto;
  max-width: 1280px;
  width: 100%;}

.resources-heading {
  margin-bottom: 40px;
  font-family: 'Montserrat';
  font-style: normal;
  font-weight: 700;
  text-transform: uppercase;
  font-size: 44px;
  line-height: 48px;
  letter-spacing: -.88px;
}

/* Grid Layout */
.resources-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24px;
  justify-items: stretch;
}

/* Card styling */
.resource-card {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 20px 24px 20px 30px;
  background: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 6px;
  text-decoration: none;
  color: #000;
  box-shadow: 0 0 5px rgba(0,0,0,0.08);
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
  width: 100%; /* responsive */
  min-height: 96px;
}

.resource-card:hover {
  background-color: #e7f1f7;
}

/* Arrow with ::after */
.resource-card::after {
  content: "";
  position: absolute;
  right: 24px;
  top: 50%;
  transform: translateY(-50%);
  width: 24px;
  height: 24px;
  background: url("data:image/svg+xml;utf8,<svg viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'><path fill-rule='evenodd' clip-rule='evenodd' d='M12.2929 4.29289C12.6834 3.90237 13.3166 3.90237 13.7071 4.29289L20.7071 11.2929C21.0976 11.6834 21.0976 12.3166 20.7071 12.7071L13.7071 19.7071C13.3166 20.0976 12.6834 20.0976 12.2929 19.7071C11.9024 19.3166 11.9024 18.6834 12.2929 18.2929L17.5858 13H4C3.44772 13 3 12.5523 3 12C3 11.4477 3.44772 11 4 11H17.5858L12.2929 5.70711C11.9024 5.31658 11.9024 4.68342 12.2929 4.29289Z' fill='%230033a0'/></svg>") no-repeat center;
  background-size: contain;
  pointer-events: none;
}

.resource-icon img {
  width: 50px;
  height: 50px;
  object-fit: contain;
  margin-right: 16px;
}

.resource-title {
  font-family: 'Prompt';
  font-style: normal;
  font-weight: 300;
  letter-spacing: -.16px;
  color: #000;
  font-size: 22px;
  line-height: 24px;
  flex: 1;
  text-align: left;
}

/* Tablet - 2 per row */
@media (max-width: 991px) {
  .resources-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Mobile - 1 per row */
@media (max-width: 600px) {
  .resources-grid {
    grid-template-columns: 1fr;
  }
  .resources-heading {
    font-size: 24px;
    margin-bottom: 24px;
  }
  .resource-card {
    padding: 16px 20px 16px 56px;
    min-height: 80px;
  }
  .resource-title {
    font-size: 16px;
    line-height: 22px;
  }
}
</style>
 