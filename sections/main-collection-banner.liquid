{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{%- assign fallback_image = "https://powerdentalgroup.com/static/version1757661371/frontend/TopSpot/PowerDental/en_US/images/breadcrumbs-bar.jpg" -%}
{%- assign bg_image = 'https://cdn.shopify.com/s/files/1/0697/9538/1398/files/Rectangle_4_1.png?v=1760339500' -%}

<style>
  .collection-hero {
    position: relative;
    background-image: url('{{ bg_image }}');
    background-size: cover;
    background-position: left bottom;
    background-repeat: no-repeat;
    color: #fff;
       padding: 70px 0 58px;
    background-attachment: scroll;
  }

  /* .collection-hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4); /* dark overlay for text visibility */
    z-index: 1;
  } */

  .collection-hero__inner {
    position: relative;
    z-index: 2;
    text-align: center;
  }

  .collection-hero__title {
    font-size: 2.5rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 15px;
  }

  .breadcrumb {
    display: inline-block;
    font-size: 0.95rem;
    color: #fff;
  }

  .breadcrumb a {
    color: #fff;
    text-decoration: underline;
  }

  .breadcrumb a:hover {
    text-decoration: none;
  }

  .breadcrumb span {
    margin: 0 5px;
  }
  
  .collection-hero__inner {
    flex-direction: column;
}

.collection-hero__inner h1.collection-hero__title {
    color: #FFF;
    text-align: center;
    font-family: Montserrat;
    font-size: 38px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.2; /* 100% */
    text-transform: uppercase;
    margin: 0 0 20px;
        max-width: 604px;
}

.breadcrumb a, .breadcrumb span {
    color: #FFF;
    font-family: Prompt;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 14px;
    text-transform: capitalize;
}

  @media (max-width: 749px) {
    .collection-hero {
      padding: 60px 15px;
    }

    .collection-hero__title {
      font-size: 1.8rem;
    }
  }
</style>

<div class="collection-hero color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-hero__inner page-width">
    <h1 class="collection-hero__title">{{ collection.title | escape }}</h1>

    <nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
      <a href="{{ routes.root_url }}">Home</a>
      <span>/</span>
      <a href="/collections">Products</a>
      <span>/</span>
      <span>{{ collection.title }}</span>
    </nav>
  </div>
</div>

{% schema %}
{
  "name": "Main collection banner",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": false,
      "label": "Show collection description"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": true,
      "label": "Show collection background image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
