{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .account-tabs-wrapper {
    display: flex;
    gap: 40px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .account-sidebar ul.account-tabs {
    padding: 0;
}

  .account-sidebar {
    min-width: 320px;
            background: #f5f5f5;background: #f8f8f8;
    padding: 15px 0;
    border-radius: 4px;
  }

  .account-sidebar h2 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .account-tabs {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .account-tabs li {
    margin-bottom: 8px;
  }

  .account-tabs button,   .account-tabs a {
   width: 100%;
    text-align: left;
    background: unset;
    border: none;
    cursor: pointer;
    font-size: 16px;
    border-radius: 0;
    transition: all 0.2s;
    color: #000;
    margin: 0;
    padding: 5px 18px 5px 15px;
    justify-content: flex-start;
    font-family: 'Montserrat';
    font-weight: 500;
    letter-spacing: -.16px;
     border-left: 3px solid transparent;
     text-decoration: none;
  }

  .account-tabs button a {
    padding-left: 0;
}

  .account-tabs button:hover {
      border-color:  #0033a0;
       font-weight: 700;
       opacity:1;
  }

   .account-tabs  a:hover {
border-color:  #0033a0;
       font-weight: 700;
       opacity:1;
    }

  .account-tabs button.active {
         border-color:  #0033a0;
         font-weight: 700;
  }

  .account-content {
    flex: 1;
    min-width: 0;
  }

  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: block;
  }

  .points-header {
    margin-bottom: 40px;
  }

  .points-header h1 {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 30px;
    text-transform: uppercase;
  }

  .points-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-bottom: 50px;
  }

  .point-card {
    padding: 40px 30px;
    border-radius: 8px;
    text-align: center;
  }

  .point-card.balance {
    background: #d4d4d4;
  }

  .point-card.earned {
    background: #4fc3f7;
  }

  .point-card.spent {
    background: #0d47a1;
    color: white;
  }

  .point-card h3 {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .point-card p {
    font-size: 16px;
    margin: 0;
  }

  .point-card.spent p {
    color: white;
  }

  .transactions-section h2 {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .no-transactions {
    background: #fff3cd;
    border: 1px solid #ffc107;
    padding: 16px 20px;
    border-radius: 4px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .no-transactions::before {
    content: "âš ";
    font-size: 20px;
    color: #856404;
  }

  .not-available {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .not-available h3 {
    font-size: 24px;
    margin-bottom: 10px;
  }

  @media screen and (max-width: 990px) {
    .account-tabs-wrapper {
      flex-direction: column;
    }

    .account-sidebar {
      min-width: auto;
    }

    .points-header h1 {
      font-size: 32px;
    }
  }
{%- endstyle -%}

<div class="customer account section-{{ section.id }}-padding">
  <div class="account-tabs-wrapper">
    <aside class="account-sidebar">
      <ul class="account-tabs">
        <li><button class="tab-btn active" data-tab="account">My Account</button></li>
        <li><button class="tab-btn" data-tab="orders">My Orders</button></li>
        <li><a href="/account/addresses">Address Book</a></li>
        {% comment %} <li><button class="tab-btn" data-tab="info">Account Information</button></li> {% endcomment %}
        <li><button class="tab-btn" data-tab="rewards">My Points and Rewards</button></li>
        {% comment %} <li><button class="tab-btn" data-tab="transactions">Transactions</button></li> {% endcomment %}
       
        <li><a href="{{ routes.account_logout_url }}" style="display: block;padding: 12px 16px;text-decoration: none;color: inherit;font-size: 16px;">Logout</a></li>
      </ul>
    </aside>

    <main class="account-content">
      <!-- My Account Tab -->
      <div class="tab-content active" id="account-tab">
        {% comment %} <h1>{{ 'customer.account.title' | t }}</h1> {% endcomment %}
        <div style="margin-top: 30px;">
          <h2>{{ 'customer.account.details' | t }}</h2>
          {{ customer.default_address | format_address }}
          <a href="{{ routes.account_addresses_url }}" style="display: inline-block; margin-top: 15px;">
            {{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})
          </a>
        </div>
      </div>

      <!-- My Orders Tab -->
      <div class="tab-content" id="orders-tab">
        <h1>{{ 'customer.orders.title' | t }}</h1>
        {% paginate customer.orders by 20 %}
          {%- if customer.orders.size > 0 -%}
            <table role="table" class="order-history" style="width: 100%; margin-top: 30px;">
              <thead>
                <tr>
                  <th>{{ 'customer.orders.order_number' | t }}</th>
                  <th>{{ 'customer.orders.date' | t }}</th>
                  <th>{{ 'customer.orders.payment_status' | t }}</th>
                  <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
                  <th>{{ 'customer.orders.total' | t }}</th>
                </tr>
              </thead>
              <tbody>
                {%- for order in customer.orders -%}
                  <tr>
                    <td><a href="{{ order.customer_url }}">{{ order.name }}</a></td>
                    <td>{{ order.created_at | time_tag: format: 'date' }}</td>
                    <td>{{ order.financial_status_label }}</td>
                    <td>{{ order.fulfillment_status_label }}</td>
                    <td>{{ order.total_net_amount | money_with_currency }}</td>
                  </tr>
                {%- endfor -%}
              </tbody>
            </table>
          {%- else -%}
            <p style="margin-top: 30px;">{{ 'customer.orders.none' | t }}</p>
          {%- endif -%}
        {% endpaginate %}
      </div>

      <!-- Address Book Tab -->
      <div class="tab-content" id="address-tab">
        <div class="not-available">
          <h3>Address Book</h3>
          <p>This feature is currently not available.</p>
        </div>
      </div>

      <!-- Account Information Tab -->
      <div class="tab-content" id="info-tab">
        <div class="not-available">
          <h3>Account Information</h3>
          <p>This feature is currently not available.</p>
        </div>
      </div>

      <!-- My Points and Rewards Tab -->
      <div class="tab-content" id="rewards-tab">
        <div class="points-header">
          <h1>My Points and Rewards</h1>
          <div class="points-cards">
            <div class="point-card balance">
              <h3>0 point</h3>
              <p>Available Balance</p>
            </div>
            <div class="point-card earned">
              <h3><span rivo-x-data="" rivo-x-text="$store.customer.pretty_points_tally">0</span> Points</h3>
           
              <p>Total Earned</p>
            </div>
            <div class="point-card spent">
              <h3>0 point</h3>
              <p>Total Spent</p>
            </div>
          </div>
        </div>
        
        <div class="transactions-section">
          <h2>Recent Transactions</h2>
          <div class="no-transactions">
            You have created no transactions.
          </div>
        </div>
      </div>

      <!-- Transactions Tab -->
      <div class="tab-content" id="transactions-tab">
        <div class="not-available">
          <h3>Transactions</h3>
          <p>This feature is currently not available.</p>
        </div>
      </div>
    </main>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabButtons = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    tabButtons.forEach(button => {
      button.addEventListener('click', function() {
        const targetTab = this.getAttribute('data-tab');
        
        // Remove active class from all buttons and contents
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabContents.forEach(content => content.classList.remove('active'));
        
        // Add active class to clicked button and corresponding content
        this.classList.add('active');
        document.getElementById(targetTab + '-tab').classList.add('active');
      });
    });
  });
</script>

