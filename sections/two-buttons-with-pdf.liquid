<!-- sections/two-buttons-with-dynamic-pdf.liquid -->
<section class="two-buttons-pdf-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}

    <div class="buttons-wrapper">
      <div class="button-item">
        {% if section.settings.button1_label != blank %}
          <a href="{{ section.settings.button1_link }}" class="btn btn-primary">
            {{ section.settings.button1_label }}
          </a>
        {% endif %}
      </div>

      <div class="button-item">
        {% if section.settings.button2_label != blank %}
          <a target="_blank" href="{{ section.settings.button2_link }}" class="btn btn-secondary">
            {{ section.settings.button2_label }}
          </a>
        {% endif %}
      </div>
    </div>

    {% if section.settings.pdf_url != blank %}
      <div class="pdf-container">
        <iframe 
          src="{{ section.settings.pdf_url }}{{ section.settings.pdf_query }}"
          width="100%"
          height="800px"
          style="border:none;"
        ></iframe>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Two Buttons with PDF",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Choose an Option"
    },
    {
      "type": "text",
      "id": "button1_label",
      "label": "Button 1 Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button2_label",
      "label": "Button 2 Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 Link"
    },
    {
      "type": "url",
      "id": "pdf_url",
      "label": "PDF File URL",
      "info": "Upload your PDF under Content → Files, then paste the file URL here."
    },
    {
      "type": "text",
      "id": "pdf_query",
      "label": "PDF View Options",
      "default": "#view=FitH",
      "info": "Optional — controls how the PDF is displayed (e.g. #view=FitH)."
    }
  ],
  "presets": [
    {
      "name": "Two Buttons with PDF"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.pdf-container {
  width: 100%;
  max-width: 100%;
  height: 800px;
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
}
.pdf-container iframe {
  width: 100%;
  height: 100%;
  border: none;
}

section.two-buttons-pdf-section {
    padding-bottom: 60px;
}
{% endstylesheet %}


<style>
.container {
  box-sizing: border-box;
  margin-left: auto;
  margin-right: auto;
  max-width: 1280px;
  width: 100%;
  padding: 0 15px;
}

.container h1 {
  text-align: center;
  font-size: 56px;
  line-height: 56px;
  font-family: "Montserrat";
  margin-top: 64px;
}

.buttons-wrapper {
  display: flex;
  gap: 20px;
  margin: 40px 0;
  flex-wrap: wrap; /* allows wrapping on small screens */
}

.button-item a {
  color: #fff !important;
  background: linear-gradient(102deg, #42c5ef 0%, #0033a0 50%, #0033a0 50%, #42c5ef 100%) !important;
  background-size: 200% 100% !important;
  background-position: 200% 100% !important;
  transition: background-position .7s !important;
  padding: 16px 24px;
  text-transform: uppercase;
  font-family: 'Montserrat';
  font-size: 14px;
  line-height: 16px;
  font-weight: 700;
  box-shadow: 0px 6px 12px 0px rgba(0, 0, 0, .1);
  border-radius: 10px;
  text-decoration: none;
}

.button-item a:hover {
  background-position: 100% 0 !important;
}

/* ✅ Responsive: stack buttons on mobile */
@media (max-width: 1280px){
  .container h1{
    font-size:xx-large;
    margin-top: 20px;
    line-height: 1.3;
}
  .buttons-wrapper{
   margin-left: 3.2rem;
   margin-right: 3.2rem;
   }
  }
@media (max-width: 479px) {
  .buttons-wrapper {
    flex-direction: column;
    gap: 10px;
  }

  .button-item {
    width: 100%;
  }

  .button-item a {
    display: inline-block;
    width: 100%;
    max-width: 260px; /* optional: keeps button from being too wide */
  }
}
</style>
 