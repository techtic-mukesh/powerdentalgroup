<section class="shows-faq-section">
  <div class="shows-container">
    <div class="shows-header">
      {% if section.settings.shows_faq_section_title != blank %}
        <h2 class="shows-faq-title">{{ section.settings.shows_faq_section_title }}</h2>
      {% endif %}
      {% if section.settings.shows_faq_section_content != blank %}
        {{ section.settings.shows_faq_section_content }}
      {% endif %}
    </div>

    <div class="sw-wrap">
        <div class="left-faq">
 {% for block in section.blocks %}
      <div class="shows-faq-item">
        {% if block.settings.shows_faq_question != blank %}
          <h3 class="shows-faq-question">
            <p>
                {{ block.settings.shows_faq_question }}
            </p>
            </h3>
        {% endif %}

        <div class="shows-faq-panel">
          {% if block.settings.shows_faq_logo %}
            <div class="shows-faq-logo">
              <img
                src="{{ block.settings.shows_faq_logo | img_url: 'master' }}"
                alt="{{ block.settings.shows_faq_title }}"
              >
            </div>
          {% endif %}

          <div class="shows-faq-info">
            {% if block.settings.shows_faq_title != blank %}
              <h4 class="shows-faq-info-title">{{ block.settings.shows_faq_title }}</h4>
            {% endif %}

            {% if block.settings.shows_faq_subtitle != blank %}
              <p class="shows-faq-info-subtitle">{{ block.settings.shows_faq_subtitle }}</p>
            {% endif %}

            {% if block.settings.shows_faq_address != blank %}
              <address>{{ block.settings.shows_faq_address }}</address>
            {% endif %}

            {% if block.settings.shows_faq_website != blank and block.settings.shows_website_text != blank %}
              <a href="{{ block.settings.shows_faq_website }}">{{ block.settings.shows_website_text }}</a>
            {% endif %}
          </div>

          {% if block.settings.shows_faq_map_url %}
            <div class="shows-faq-map-wrapper">
              <div class="shows-faq-map">
                <iframe src="{{ block.settings.shows_faq_map_url }}" width="600" height="400"></iframe>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
        </div>
       
        <div class="right-im">
            <img src="{{ section.settings.right_image | img_url: '' }}" alt="">
        </div>

    </div>

    
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const faqHeaders = document.querySelectorAll('.shows-faq-item h3');

    faqHeaders.forEach((header) => {
      header.addEventListener('click', function () {
        const currentPanel = header.nextElementSibling;

        header.classList.toggle('active');
        currentPanel.classList.toggle('active');

        const allPanels = document.querySelectorAll('.shows-faq-item .shows-faq-panel');
        allPanels.forEach((panel) => {
          if (panel !== currentPanel) {
            panel.style.maxHeight = null;
            panel.previousElementSibling.classList.remove('active');
          }
        });

        if (currentPanel.style.maxHeight) {
          currentPanel.style.maxHeight = null;
        } else {
          currentPanel.style.maxHeight = currentPanel.scrollHeight + 'px';
        }
      });
    });
  });
</script>

