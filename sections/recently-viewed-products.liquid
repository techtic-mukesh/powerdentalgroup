    const currentHandle = '{{ product.handle }}';
    let rv = getRecentlyViewed();
    rv = [currentHandle, ...rv.filter(h => h !== currentHandle)].slice(0, MAX_PRODUCTS*2);
    localStorage.setItem(RECENTLY_VIEWED_KEY, JSON.stringify(rv));
