<section class="custom-kitting-process-section" style="background: {{ section.settings.bg_color | default: 'rgba(240, 238, 238, 0.93)' }};">
  <div class="page-width">
    <div class="custom-kitting-process-header">
      <h2>{{ section.settings.heading }}</h2>
      <p class="para_new">{{ section.settings.subheading }}</p>
    </div>
    <div class="custom-kitting-process-grid">
      {% for block in section.blocks %}
        
        <div class="kitting-item" {{ block.shopify_attributes }}>
           {% if block.settings.step_image != blank %}
              <img src="{{ block.settings.step_image | image_url: width: 100 }}" alt="{{ block.settings.title | escape }}">
            {% else %}
            <div class="kitting-icon">
                {{ block.settings.step_svg }}
            </div>
           {% endif %}
          <h3 class="custom-kitting-heading">{{ block.settings.title }}</h3>
          <div class="custom-kitting-text">
            {{ block.settings.content }}
          </div>

        </div>

      {% endfor %}
    </div>
  </div>
</section>

