{% schema %}
  {
    "name": "Kitting Process",
    "tag": "section",
    "class": "custom-kitting-process",
    "max_blocks": 30,
    "settings": [
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#f0eeee"
      }
    ],
    "blocks": [
      {
        "type": "step",
        "name": "step",
        "settings": [
            {
          "type": "image_picker",
          "id": "step_image",
          "label": "Step Image"
        },
            {
          "type": "textarea",
          "id": "step_svg",
          "label": "Step SVG Code"
        },
          {
            "type": "richtext",
            "id": "title",
            "label": "Title"
          }, {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Kitting Process"
      }
    ]
  }
{% endschema %}