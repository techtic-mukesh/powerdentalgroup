body.gradient.page\.our-vision-philosophy .custom-kitting-process-grid .kitting-item:after {
      display: none;
}

.custom-kitting-process-grid .kitting-item:last-of-type:after {
  display: none;
}

.custom-kitting-process-grid .kitting-item .kitting-icon {
    border-radius: 50px;
    border: 1px solid var(--gradient, #42C5EF);
    background: linear-gradient(90deg, #42C5EF 0%, #0033A0 100%);
    min-width: 100px;
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 30px;
}

.custom-kitting-process-grid .kitting-item .kitting-icon svg {
    width: 39px;
    height: 39px;
}

.custom-kitting-process-grid .kitting-item h3 {
    color: #01000A;
    text-align: center;
    font-family: Prompt;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: 22px; /* 137.5% */
    margin: 0 0 15px;
}

body.gradient.page\.sharpening  .custom-kitting-process-header h2 p strong , body.gradient.page\.sharpening .custom-kitting-process-grid .kitting-item h3 p strong{
  font-weight: 300;
}

section.custom-kitting-process-section .custom-kitting-process-header h2 p{
      font-size: 36px;
    line-height: 40px;
    /* text-transform: uppercase; */
    /* margin: 0 0 20px; */
}
.custom-kitting-process-grid .kitting-item .custom-kitting-text p {
    color: #01000A;
    text-align: center;
    font-family: Prompt;
    font-size: 14px;
    font-style: normal;
    font-weight: 300;
    line-height: 22px; /* 157.143% */
}



.custom-kitting-process-grid .kitting-item img {
    width: 80px;
    height: 80px;
    object-fit: contain;
    object-position: center;
    margin-bottom: 10px;
}
body.gradient.page\.our-vision-philosophy .custom-kitting-heading strong{
    font-weight:300 !important; 
}

@media (max-width:1140px) {
  .custom-kitting-process-grid .kitting-item:after {
    display: none;
  }
}


