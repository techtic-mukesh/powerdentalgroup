<section class="custom-kitting-process-section" style="background: {{ section.settings.bg_color | default: 'rgba(240, 238, 238, 0.93)' }};">
  <div class="page-width">
    <div class="custom-kitting-process-header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>
    <div class="custom-kitting-process-grid">
      {% for block in section.blocks %}
        
        <div class="kitting-item" {{ block.shopify_attributes }}>
            <div class="kitting-icon">
                {{ block.settings.step_svg }}
            </div>
          <h3 class="custom-kitting-heading">{{ block.settings.title }}</h3>
          <div class="custom-kitting-text">
            {{ block.settings.content }}
          </div>

        </div>

      {% endfor %}
    </div>
  </div>
</section>

<style>
    section.custom-kitting-process-section {
    display: inline-block;
    width: 100%;
    vertical-align: top;
    padding: 60px 0;
}

section.custom-kitting-process-section .custom-kitting-process-header {
    text-align: center;
    margin: 0 auto 30px;
    max-width: 800px;
}

section.custom-kitting-process-section .custom-kitting-process-header p {
    margin: 0 auto;
    color: #01000A;
    text-align: center;
    font-family: Prompt;
    font-size: 14px;
    font-style: normal;
    font-weight: 300;
    line-height: 22px; /* 157.143% */
    max-width: 580px;
}

.custom-kitting-process-grid {display: grid;grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));gap: 30px;text-align: center;}

.custom-kitting-process-grid .kitting-item {
    width: 100%;
    text-align: center;
}

.custom-kitting-process-grid .kitting-item .kitting-icon {
    border-radius: 50px;
    border: 1px solid var(--gradient, #42C5EF);
    background: linear-gradient(90deg, #42C5EF 0%, #0033A0 100%);
    min-width: 100px;
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 30px;
}

.custom-kitting-process-grid .kitting-item .kitting-icon svg {
    width: 39px;
    height: 39px;
}

.custom-kitting-process-grid .kitting-item h3 {
    color: #01000A;
    text-align: center;
    font-family: Prompt;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: 22px; /* 137.5% */
    margin: 0 0 15px;
}

.custom-kitting-process-grid .kitting-item .custom-kitting-text p {
    color: #01000A;
    text-align: center;
    font-family: Prompt;
    font-size: 14px;
    font-style: normal;
    font-weight: 300;
    line-height: 22px; /* 157.143% */
}


</style>

{% schema %}
  {
    "name": "Kitting Process",
    "tag": "section",
    "class": "custom-kitting-process",
    "max_blocks": 30,
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#f0eeee"
      }
    ],
    "blocks": [
      {
        "type": "step",
        "name": "step",
        "settings": [
            {
          "type": "textarea",
          "id": "step_svg",
          "label": "Step SVG Code"
        },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Kitting Process"
      }
    ]
  }
{% endschema %}