{% schema %}
{
  "name": "BgImage with Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_background_image",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_background_image",
      "label": "Mobile Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Your subheading text goes here"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "BgImage with Text",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="image-left-text-section">
  <div class="image-left-text-overlay">
    <div class="image-left-text-content">
      <h2>
        {{ section.settings.heading }}<br>
        <strong>{{ section.settings.subheading }}</strong>
      </h2>
      {% if section.settings.button_text != blank %}
        <div class="button-item">
          <a href="{{ section.settings.button_link }}" class="btn">
            <span>{{ section.settings.button_text }}</span>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
.image-left-text-section {
  position: relative;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  min-height: 278px;
  padding: 80px 20px;
  color: #fff;

  /* ðŸ”¹ Default = desktop image */
  background-image: url('{{ section.settings.desktop_background_image | image_url: width: 1600 }}');
}

.image-left-text-overlay {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  max-width: 1200px;
  margin: 0 auto;
  height: 100%;
}

.image-left-text-content {
  max-width: 500px;
  padding: 20px;
}

.image-left-text-content h2 {
  margin-top: 25px;
  font-size: 44px;
  font-weight: 300;
  line-height: 1.2;
  letter-spacing: -0.88px;
  text-transform: uppercase;
  color:#fff;
}

.image-left-text-content strong {
  font-weight: 800;
}

.image-left-text-content .button-item a {
  font-family: Montserrat, sans-serif;
  font-size: 14px;
  font-weight: 700;
  line-height: 110%;
  letter-spacing: .84px;
  text-transform: uppercase;
  display: inline-flex;
  padding: 16px 24px;
  justify-content: center;
  align-items: center;
  border-radius: 4px;
  border: 2px solid var(--text-accent-01,#5b5b5b);
  box-shadow: 0px 6px 12px rgba(0,0,0,.1);
  cursor: pointer;
  transition: background-color .5s ease;
  text-decoration: none;
  color:#fff;
}

.image-left-text-content .button-item a:hover {
  color:#000;
  background: #fff;
  border: 2px solid #fff;
  box-shadow: 0px 6px 12px rgba(0,0,0,.1);
}

/* ðŸ”¹ Tablet (â‰¤1024px) */
@media (max-width: 1024px) {
  .image-left-text-section {
    padding: 60px 20px;
  }
  .image-left-text-content h2 {
    font-size: 35px;
    line-height: 1.3;
  }
}

/* ðŸ”¹ Mobile (â‰¤767px) */
@media (max-width: 767px) {
  .image-left-text-section {
    background-image: url('{{ section.settings.mobile_background_image | image_url: width: 800 }}') !important;
    text-align: center;
    padding: 50px 15px;
    min-height: 220px;
  }
  .image-left-text-overlay {
    justify-content: center;
    text-align: center;
  }
  .image-left-text-content {
    max-width: 100%;
    padding: 10px;
  }
  .image-left-text-content h2 {
    font-size: 28px;
    line-height: 1.3;
  }
  .image-left-text-content .button-item a {
    font-size: 13px;
    padding: 12px 20px;
  }
}
</style>
