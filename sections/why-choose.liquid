
<section class="why-choose" style="background-color: {{ section.settings.background_color }};">
    <div class="page-width">
        <div class="why-choose__wrap">
            <div class="left-block">
                <div class="text-block">
                    <span class="bg-image">
                        <img src="{{ section.settings.image |  img_url: '' }}" alt="">
                    </span>
                    <p>{{ section.settings.subheading }}</p>
                    <h2>{{ section.settings.heading }}</h2>
                </div>
            </div>
            <div class="right-block">
                 {% for block in section.blocks %}
                <div class="block-item">
                    <h3>{{ block.settings.title }}</h3>
                    <div class="text-inner">
                        {{ block.settings.label }}
                    </div>
                </div>
                 {% endfor %}
            </div>
        </div>
    </div>
</section>

<style>
    section.why-choose {
    padding: 58px 0;
    display: inline-block;
    width: 100%;
    vertical-align: top;
}

section.why-choose .why-choose__wrap {
    display: flex;
    flex-flow: row wrap;
    align-items: stretch;
    justify-content: space-between;
    gap: 196px;
}

section.why-choose .why-choose__wrap > div {
    width: calc(100% / 2 - 98px);
    position: relative;
}

section.why-choose .why-choose__wrap span.bg-image {
    display: inline-block;
    position: absolute;
    top: 0;
    margin-left: 0;
    height: 100%;
    right: 0;
}

section.why-choose .why-choose__wrap span.bg-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

section.why-choose .why-choose__wrap .right-block {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    align-items: flex-start;
}

section.why-choose .why-choose__wrap .right-block .block-item {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

section.why-choose .why-choose__wrap .right-block .block-item h3 {
    color: #141132;
    font-family: Montserrat;
    font-size: 22px;
    font-style: normal;
    font-weight: 600;
    line-height: 26px; /* 118.182% */
    letter-spacing: 0.66px;
    text-transform: uppercase;
    margin: 0 0 10px;
}

section.why-choose .why-choose__wrap .right-block {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    align-items: flex-start;
}

section.why-choose .why-choose__wrap .left-block {
    display: flex;
    align-items: center;
}

section.why-choose .text-block * {
    position: relative;
}

section.why-choose .why-choose__wrap .left-block h2 {
                 max-width: 350px;
}

section.why-choose .why-choose__wrap .right-block .block-item {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

section.why-choose .why-choose__wrap .right-block .block-item h3 p {
    color: #141132;
font-family: Montserrat;
font-size: 22px;
font-style: normal;
font-weight: 600;
line-height: 26px; /* 118.182% */
letter-spacing: 0.66px;
text-transform: uppercase;
}

section.why-choose .why-choose__wrap .right-block .block-item h3 p, section.why-choose .why-choose__wrap .right-block .block-item p {
    margin: 0 ;
    
}

section.why-choose .why-choose__wrap .right-block .block-item h3 p strong {
    background: linear-gradient(90deg, #42C5EF 0%, #0033A0 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 600;
}

section.why-choose .why-choose__wrap .left-block p {
    color: #FFF;
    font-family: Prompt;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: 20px; /* 125% */
    letter-spacing: 2.4px;
    text-transform: uppercase;
    background: linear-gradient(90deg, #42C5EF 0%, #0033A0 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0 0 15px;
}

section.why-choose .why-choose__wrap .right-block .block-item .text-inner * {
    color: #141132;
    font-family: Prompt;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 22px; /* 137.5% */
}
</style>


{% schema %}
{
  "name": "Why Choose",
  "tag": "section",
  "settings": [
    {
    "type": "color",
    "id": "background_color",
    "label": "Background Color",
    "default": "#ffffff"
    },
     {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
     {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
          {
          "type": "richtext",
          "id": "title",
          "label": "title"
        },
        {
          "type": "richtext",
          "id": "label",
          "label": "Content"
        }
      ]
    }
  ],
  "max_blocks": 15,
  "presets": [
    {
      "name": "Why Choose",
      "category": "Custom"
    }
  ]
}
{% endschema %}