

<div class="media-logos-section" style="background-color: {{ section.settings.background_color }}; padding: 30px 0;">
  <div class="page-width">
    <div class="media-logos">
      {% for block in section.blocks %}
        {% if block.settings.logo_image %}
          <a href="{{ block.settings.logo_link | default: '#' }}" target="_blank" rel="noopener">
            <img src="{{ block.settings.logo_image | img_url: '' }}" alt="Media Logo" >
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>

.media-logos-section .media-logos {
   
    display: flex;
    align-items: center;
    gap: 0;
    justify-content: center;
}

.media-logos-section .media-logos a {
    display: inline-flex
;
    align-items: center;
    width: calc(100% / 5);
    justify-content: center;
}

.media-logos-section .media-logos img {
    width: 100%;
    height: 44px;
    object-fit: contain;
    object-position: center;
    transition: all .2s ease-in-out;
}

.media-logos-section .media-logos a:last-of-type img {
        width: inherit;
}
.media-logos-section .media-logos a:hover img {
      filter: opacity(.5);
}
 @media screen and (max-width: 540px) {
    .media-logos-section .media-logos {
    gap: 20px;
}
   
  }
</style>


{% schema %}
{
  "name": "Media Logos",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#5f6c58"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "url",
          "id": "logo_link",
          "label": "Logo Link"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Media Logos",
      "category": "Custom"
    }
  ]
}
{% endschema %}