<script>
(function() {
  const wrapper = document.querySelector('.shipping-threshold-wrapper');
  if (!wrapper) return;
  
  const threshold = parseFloat(wrapper.dataset.threshold);
  const messageEl = wrapper.querySelector('.threshold-message');
  const percentageEl = wrapper.querySelector('.progress-percentage');
  const cartPercentageEl = wrapper.querySelector('.cart-progress-percentage');
  const progressBar = wrapper.querySelector('.progress-bar');
  const circle = wrapper.querySelector('.progress-ring-circle');
  const radius = circle.r.baseVal.value;
  const circumference = radius * 2 * Math.PI;
  
  let autoCloseTimeout = null;
  let hasOpenedOnce = false; // Track if popup has opened once
  let isFirstProductAdd = true; // Track first product addition
  
  circle.style.strokeDasharray = `${circumference} ${circumference}`;
  circle.style.strokeDashoffset = circumference;

  // Hover functionality for desktop
  if (window.innerWidth > 767) {
    wrapper.addEventListener('mouseenter', function() {
      wrapper.classList.add('open');
      clearTimeout(autoCloseTimeout);
    });

    wrapper.addEventListener('mouseleave', function() {
      wrapper.classList.remove('open');
    });
  }

  // Click to toggle on mobile
  if (window.innerWidth <= 767) {
    wrapper.addEventListener('click', function() {
      wrapper.classList.toggle('open');
    });
  }

  // Function to temporarily open widget (only once)
  function temporarilyOpen() {
    if (hasOpenedOnce) return; // Don't open if already opened once
    
    wrapper.classList.add('open');
    hasOpenedOnce = true; // Mark as opened
    
    clearTimeout(autoCloseTimeout);
    autoCloseTimeout = setTimeout(function() {
      wrapper.classList.remove('open');
    }, 3000);
  }

  function formatMoney(cents) {
    return '$' + Math.round(cents / 100);
  }

  function updateProgress(shouldOpenPopup = false) {
    fetch('/cart.js')
      .then(res => res.json())
      .then(cart => {
        const cartTotal = cart.total_price / 100;
        const remaining = threshold - cartTotal;
        const percentage = Math.min((cartTotal / threshold) * 100, 100);
        
        // Update text message
        if (cartTotal >= threshold) {
          messageEl.innerHTML = `<strong style="color: #0033a0;">ðŸŽ‰ Congratulations!</strong><br><span style="color: #010005;">You've unlocked free shipping!</span>`;
          wrapper.classList.add('threshold-reached');
        } else {
          messageEl.innerHTML = `Spend <strong>${formatMoney((remaining) * 100)}</strong> more to get<br>free shipping!`;

          wrapper.classList.remove('threshold-reached');
        }
        
        // Update percentage display
        percentageEl.textContent = Math.round(percentage) + '%';
        if (cartPercentageEl) {
          cartPercentageEl.textContent = Math.round(percentage) + '%';
        }
        
        // Update progress bar
        progressBar.style.width = percentage + '%';
        
        // Update circle progress
        const offset = circumference - (percentage / 100) * circumference;
        circle.style.strokeDashoffset = offset;
        
        // Change color when threshold reached
        if (cartTotal >= threshold) {
          circle.style.stroke = '#0033a0';
          progressBar.style.backgroundColor = '#0033a0';
        } else {
          circle.style.stroke = '{{ section.settings.progress_color }}';
          progressBar.style.backgroundColor = '{{ section.settings.bar_color }}';
        }
        
        // Open popup only on first product add
        if (shouldOpenPopup && isFirstProductAdd && cartTotal > 0) {
          temporarilyOpen();
          isFirstProductAdd = false; // Mark first add as done
        }
      })
      .catch(err => console.error('Shipping threshold error:', err));
  }

  // Initial update (no popup)
  updateProgress(false);
  
  // Listen for cart events (no popup)
  document.addEventListener('cart:updated', function() {
    updateProgress(false);
  });
  
  document.addEventListener('cart:refresh', function() {
    updateProgress(false);
  });
  
  // Dawn theme specific - cart drawer updates (no popup)
  const cartDrawer = document.querySelector('cart-drawer');
  if (cartDrawer) {
    const observer = new MutationObserver(function(mutations) {
      updateProgress(false);
    });
    observer.observe(cartDrawer, { 
      childList: true, 
      subtree: true 
    });
  }
  
  // Listen for quantity changes in cart (no popup)
  document.addEventListener('change', function(e) {
    if (e.target.name && (e.target.name.includes('quantity') || e.target.name.includes('updates'))) {
      setTimeout(function() {
        updateProgress(false);
      }, 500);
    }
  });
  
  // Listen for click events - remove buttons (no popup)
  document.addEventListener('click', function(e) {
    const target = e.target.closest('button, a');
    if (target && (
      target.classList.contains('cart-item__remove') ||
      target.classList.contains('remove-item') ||
      target.textContent.toLowerCase().includes('remove')
    )) {
      setTimeout(function() {
        updateProgress(false);
      }, 500);
    }
  });
  
  // Fetch interceptor for cart updates
  const originalFetch = window.fetch;
  window.fetch = function(...args) {
    const promise = originalFetch.apply(this, args);
    const url = args[0];
    
    if (typeof url === 'string') {
      // Only open popup for add to cart
      if (url.includes('/cart/add')) {
        promise.then(() => setTimeout(function() {
          updateProgress(true); // Pass true to open popup
        }, 300));
      }
      // Update without popup for other cart actions
      else if (url.includes('/cart/update') || 
               url.includes('/cart/change') || 
               url.includes('/cart/clear')) {
        promise.then(() => setTimeout(function() {
          updateProgress(false);
        }, 300));
      }
    }
    
    return promise;
  };
})();
</script>
