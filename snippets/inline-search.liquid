<script>
  class PredictiveSearch {
  constructor() {
    this.input = document.querySelector('#Search-Inline');
    this.results = document.querySelector('#PredictiveResults');
    this.input.addEventListener('input', this.onChange.bind(this));
  }

  onChange() {
    const query = this.input.value.trim();
    if (query.length < 2) {
      this.results.innerHTML = '';
      return;
    }

    fetch(`/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=5&section_id=predictive-search`)
      .then(response => response.json())
      .then(suggestions => {
        this.renderResults(suggestions.resources.results.products);
      });
  }

  renderResults(products) {
    if (!products.length) {
      this.results.innerHTML = '<p class="no-results">No results found</p>';
      return;
    }

    this.results.innerHTML = `
      <ul class="predictive-list">
        ${products
          .map(
            product => `
              <li>
                <a href="${product.url}" class="predictive-item">
                  <img src="${product.featured_image.url}" alt="${product.featured_image.alt}" />
                  <div class="predictive-info">
                  <span>${product.title}</span>
                  <p>$ ${product.price}</p>
                  </div>
                </a>
              </li>
            `
          )
          .join('')}
      </ul>
    `;
  }
}

document.addEventListener('DOMContentLoaded', () => {
  new PredictiveSearch();

   const input = document.querySelector('#Search-Inline');
  const searchIcon = document.querySelector('.search-icon');
  const closeIcon = document.querySelector('.close-icon');

  input.addEventListener('input', () => {
    if (input.value.trim() !== '') {
      searchIcon.style.display = 'none';
      closeIcon.style.display = 'flex';
    } else {
      searchIcon.style.display = 'flex';
      closeIcon.style.display = 'none';
    }
  });

  closeIcon.addEventListener('click', () => {
    input.value = '';
    input.focus();
    searchIcon.style.display = 'flex';
    closeIcon.style.display = 'none';
    document.querySelector('#PredictiveResults').innerHTML = ''; // clear results too
  });
});

</script>