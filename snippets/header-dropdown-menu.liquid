{% comment %}
  Renders a standard dropdown style menu for the header.

  Usage:
  {% render 'header-dropdown-menu' %}
{% endcomment %}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li class="{{- link.title | escape -}}">
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" data-url="{{ link.url }}">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </summary>
              <ul
                id="HeaderMenu-MenuList-{{ forloop.index }}"
                class="header__submenu list-menu list-menu--disclosure color-{{ section.settings.menu_color_scheme }} gradient caption-large motion-reduce global-settings-popup"
                role="list"
                tabindex="-1"
              >
           {% if forloop.first %}
              <div class="tabs-menu">
                <div class="tabs">
                  <!-- Tabs Navigation -->
                  <ul id="tabs-nav">
                    {% for block in section.blocks %}
                      {% if block.type == 'menu' %}
                        <li class="tabs-li {% if forloop.first %} active{% endif %}"">
                          <a href="{{ block.settings.menu_link }}" data-tab="#tab{{ forloop.index }}">
                            {% if block.settings.svg %}
                              <span class="tab-icon">{{ block.settings.svg }}</span>
                            {% endif %}
                            <span>{{ block.settings.menu_title }}</span>
                            <div class="right-arw">
                              <svg xmlns="http://www.w3.org/2000/svg" width="8" height="14" viewBox="0 0 8 14" fill="none">
                                <path d="M1 13L7 7L0.999999 1" stroke="black" stroke-linecap="round" stroke-linejoin="round"/>
                              </svg>
                            </div>
                          </a>
                          
                        </li>
                      {% endif %}
                    {% endfor %}
                  </ul>
                  
                  <!-- Tabs Content -->
               <div id="tabs-content">
                {% for block in section.blocks %}
                  {% if block.type == 'menu' %}
                    <div id="tab{{ forloop.index }}" class="tab-content" {% if forloop.first %} style="display: block;"{% endif %}>
                      <div class="mega-menu-layout">
                        <!-- Left Side - Subcategories -->
                     <div class="mega-menu-left {% if block.settings.featured_product != blank %} has-featured-product {% endif %}">
                        {% for collection in block.settings.menu_collection %}
                          <li>
                            <a href="{{ collection.url }}" class="collection-item" data-image="{{ collection.image | img_url: '' }}">
                              <div class="cin-icon"></div>
                              <p>{{ collection.title }}</p>
                            </a>

                            {% comment %} âœ… Loop through assigned subcategories metafield {% endcomment %}
                            {% assign subcategories = collection.metafields.custom.subcategory.value %}
                            {% if subcategories != blank %}
                              <ul class="subcategory-list">
                                {% for sub in subcategories limit: 2 %}
                                  <li>
                                    <a href="{{ sub.url }}" class="sub-collection-item" data-image="{{ sub.image | img_url: 'medium' }}">
                                      <p>{{ sub.title }}</p>
                                    </a>
                                  </li>
                                {% endfor %}

                                  <li class="view-more-item">
                                    <a href="{{ collection.url }}" class="view-more-link">
                                      <p>View More</p>
                                    </a>
                                  </li>
                              </ul>
                            {% endif %}
                          </li>
                        {% endfor %}
                      </div>

                        
                        <!-- Right Side - Featured Product -->
                        {% if block.settings.featured_product != blank %}
                        <div class="mega-menu-right">
                            {% assign product = all_products[block.settings.featured_product] %}
                            <div class="featured-product-card">
                              <a href="{{ product.url }}" class="featured-product-link" style="background-image: url('{{ product.featured_image | img_url: '' }}');">
                                <div class="featured-product-info">
                                  <p class="featured-product-price">
                                    {{ product.variants.first.price | money }}
                                  </p>
                                  <h4 class="featured-product-title">
                                    {{ product.title }}
                                  </h4>
                                  <div class="sku-info">
                                    {% if product.variants.first.sku != blank %}
                                      <p class="featured-product-sku">
                                        <span>SKU:</span> {{ product.variants.first.sku }}
                                      </p>
                                    {% endif %}

                                    {% if product.available %}
                                      <p class="featured-product-stock in-stock">
                                        <span class="stock-indicator">
                                          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" fill="none">
                                            <g clip-path="url(#clip0_2203_9850)">
                                              <circle cx="7" cy="7" r="6.125" fill="#28A745"/>
                                            </g>
                                            <defs>
                                              <clipPath id="clip0_2203_9850">
                                                <rect width="14" height="14" fill="white"/>
                                              </clipPath>
                                            </defs>
                                          </svg>
                                        </span>
                                        In Stock
                                      </p>
                                    {% else %}
                                      <p class="featured-product-stock out-of-stock">
                                        <span class="stock-indicator"></span>
                                        Out of Stock
                                      </p>
                                    {% endif %}
                                  </div>
                                </div>
                              </a>
                            </div>
                         
                        </div>
                                  {% endif %}
                      </div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
                </div>
              </div>
            {% else %}
              {%- for childlink in link.links -%}
                <li>
                  {%- if childlink.links == blank -%}
                    <a
                      id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                      href="{{ childlink.url }}"
                      class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if childlink.current %} list-menu__item--active{% endif %}"
                      {% if childlink.current %}
                        aria-current="page"
                      {% endif %}
                    >
                      {{ childlink.title | escape }}
                    </a>
                  {%- else -%}
                    <details id="Details-HeaderSubMenu-{{ link.handle }}-{{ childlink.handle }}">
                      <summary
                        id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                        class="header__menu-item link link--text list-menu__item focus-inset caption-large"
                      >
                        <span>{{ childlink.title | escape }}</span>
                        {{- 'icon-caret.svg' | inline_asset_content -}}
                      </summary>
                      <ul
                        id="HeaderMenu-SubMenuList-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                        class="header__submenu list-menu motion-reduce"
                      >
                        {%- for grandchildlink in childlink.links -%}
                          <li>
                            <a
                              id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                              href="{{ grandchildlink.url }}"
                              class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if grandchildlink.current %} list-menu__item--active{% endif %}"
                              {% if grandchildlink.current %}
                                aria-current="page"
                              {% endif %}
                            >
                              {{ grandchildlink.title | escape }}
                            </a>
                          </li>
                        {%- endfor -%}
                      </ul>
                    </details>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            {% endif %}
              </ul>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>


<script>
$(document).ready(function () {

  // Mega menu hover + submenu animation
  $(".header__inline-menu details").each(function () {
    const $item = $(this);
    const $megaMenu = $item.find(".mega-menu__content");
    const $submenu = $item.find("ul.header__submenu");
    const $tabsMenu = $item.find(".tabs-menu");

    // Hide initially
    if ($megaMenu.length) $megaMenu.hide();
    if ($submenu.length) $submenu.hide();

    // Hover in
    $item.on("mouseenter", function () {
      $item.attr("open", "true");

      // Animate mega menu
      if ($megaMenu.length) {
        $megaMenu.stop(true, true)
          .css({ display: "block", height: 0, opacity: 0 })
          .animate({ height: $megaMenu.get(0).scrollHeight, opacity: 1 }, 300);
      }

      // Animate submenu
      if ($submenu.length) {
        $submenu.stop(true, true)
          .css({ display: "block", height: 0, opacity: 0 })
          .animate({ height: $submenu.get(0).scrollHeight, opacity: 1 }, 300);
      }

      // Initialize tabs
      if ($tabsMenu.length) {
        $tabsMenu.find("#tabs-nav li.tabs-li").removeClass("active");
        $tabsMenu.find(".tab-content").hide();

        $tabsMenu.find("#tabs-nav li.tabs-li:first").addClass("active");
        $tabsMenu.find(".tab-content:first").show();
      }
    });

    // Hover out
    $item.on("mouseleave", function () {
      $item.removeAttr("open");

      // Hide mega menu
      if ($megaMenu.length) {
        $megaMenu.stop(true, true)
          .animate({ height: 0, opacity: 0 }, 300, function () {
            $(this).hide();
          });
      }

      // Hide submenu
      if ($submenu.length) {
        $submenu.stop(true, true)
          .animate({ height: 0, opacity: 0 }, 300, function () {
            $(this).hide();
          });
      }

      // Reset tabs
      if ($tabsMenu.length) {
        $tabsMenu.find("#tabs-nav li.tabs-li").removeClass("active");
        $tabsMenu.find(".tab-content").hide();

        $tabsMenu.find("#tabs-nav li.tabs-li:first").addClass("active");
        $tabsMenu.find(".tab-content:first").show();
      }
    });

    // Tab switching on hover (use data-tab)
    $tabsMenu.find("#tabs-nav li.tabs-li").hover(function (e) {
      e.preventDefault(); // prevent link triggering
      const $this = $(this);

      // Remove active from all tabs
      $tabsMenu.find("#tabs-nav li.tabs-li").removeClass("active");
      $this.addClass("active");

      // Hide all tab contents
      $tabsMenu.find(".tab-content").hide();

      // Show the one that matches data-tab
      const activeTab = $this.find("a").data("tab");
      if (activeTab) {
        $tabsMenu.find(activeTab).stop(true, true).fadeIn(200);
      }
    });

    // Allow clicking the tab link to actually go to its href
    $tabsMenu.find("#tabs-nav li.tabs-li a").on("click", function (e) {
      const link = $(this).attr("href");
      if (link && link !== "#") {
        window.location.href = link; // navigate normally
      }
    });

  });

});



</script>