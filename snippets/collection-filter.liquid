  <style>
    .category-filter { margin-bottom: 20px;   border: 1px solid #DCDCDC;
    background: #FFF; width: 100%;}
    .category-filter__title {  margin: 0;
    padding: 23px 20px;
    color: #FFF;
    font-family: Montserrat;
    font-size: 18px;
    font-style: normal;
    font-weight: 700;
    line-height: 18px; /* 100% */
