<script>
/* ========================================
   FEBRUARY PROMO POPUP MANAGER
   Close = hidden for 7 days (same as January)
======================================== */
(function() {
  'use strict';

  const CONFIG = {
    STORAGE_KEY: 'february_promo_popup',
    TIME_DELAY: 8000,
    SCROLL_THRESHOLD: 50,
    DISMISS_DAYS: 7,
    ANIMATION_DURATION: 450,
    DEBUG: false
  };

  const STATES = {
    DISMISSED: 'dismissed'
  };

  const Storage = {
    set(state, days) {
      try {
        const expiry = new Date();
        expiry.setDate(expiry.getDate() + days);
        const data = {
          value: state,
          expiry: expiry.getTime()
        };
        localStorage.setItem(CONFIG.STORAGE_KEY, JSON.stringify(data));
        document.cookie = `${CONFIG.STORAGE_KEY}=${state};expires=${expiry.toUTCString()};path=/;SameSite=Lax`;
      } catch (e) {
        console.error('LocalStorage write error:', e);
      }
    },

    get() {
      try {
        const cookieMatch = document.cookie.split('; ').find(r => r.startsWith(CONFIG.STORAGE_KEY + '='));
        if (cookieMatch) return cookieMatch.split('=')[1];

        const item = localStorage.getItem(CONFIG.STORAGE_KEY);
        if (!item) return null;

        const data = JSON.parse(item);
        const now = new Date().getTime();

        if (now > data.expiry) {
          localStorage.removeItem(CONFIG.STORAGE_KEY);
          return null;
        }

        return data.value;
      } catch (e) {
        console.error('LocalStorage read error:', e);
      }

      return null;
    },

    markDismissed() {
      this.set(STATES.DISMISSED, CONFIG.DISMISS_DAYS);
    },

    shouldShowPopup() {
      const state = this.get();
      if (state === STATES.DISMISSED) return false;
      return true;
    }
  };

  const Popup = {
    element: null,
    isShowing: false,

    init() {
      this.element = document.getElementById('februaryPromoPopup');
      if (!this.element) return false;
      return true;
    },

    show() {
      if (!this.element || this.isShowing) return;
      this.isShowing = true;
      document.body.classList.add('popup-open');
      requestAnimationFrame(() => this.element.classList.add('active'));
    },

    hide() {
      if (!this.element) return;
      this.element.classList.remove('active');
      this.element.classList.add('closing');
      setTimeout(() => {
        this.element.classList.remove('closing');
        document.body.classList.remove('popup-open');
        this.isShowing = false;
      }, CONFIG.ANIMATION_DURATION);
    }
  };

  function initEvents() {
    const closeBtn = document.getElementById('closeFebruaryPopup');
    if (closeBtn) {
      closeBtn.addEventListener('click', () => {
        Storage.markDismissed();
        Popup.hide();
      });
    }

    if (Popup.element) {
      Popup.element.addEventListener('click', (e) => {
        if (e.target === Popup.element) {
          Storage.markDismissed();
          Popup.hide();
        }
      });
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && Popup.isShowing) {
        Storage.markDismissed();
        Popup.hide();
      }
    });
  }

function init() {
  const currentPath = window.location.pathname;
  const isAuthPage =
    currentPath.includes('/account/login') ||
    currentPath.includes('/account/register') ||
    currentPath.includes('/account');

  if (isAuthPage) return;

  const isCollectionPage =
    currentPath.includes('/collections/') &&
    !currentPath.includes('/collections/all') &&
    currentPath.split('/').length >= 3;

  if (isCollectionPage) return;
  if (currentPath.includes('/cart')) return;
  if (!Storage.shouldShowPopup()) return;
  if (!Popup.init()) return;

  initEvents();

  document.addEventListener('cart:updated', () => {
    sessionStorage.setItem('last_cart_action', Date.now().toString());
    if (Popup.isShowing) Popup.hide();
  });

  document.addEventListener('cart:add', () => {
    sessionStorage.setItem('last_cart_action', Date.now().toString());
    if (Popup.isShowing) Popup.hide();
  });

  setTimeout(() => {
    if (!Popup.element || Popup.isShowing) return;

    const path = window.location.pathname;
    const onCollection =
      path.includes('/collections/') &&
      !path.includes('/collections/all') &&
      path.split('/').length >= 3;
    const onCart = path.includes('/cart');

    const lastAction = sessionStorage.getItem('last_cart_action');
    const timeSince = lastAction
      ? Date.now() - parseInt(lastAction)
      : 999999;

    if (!onCollection && !onCart && timeSince >= 5000) {
      Popup.show();
    }
  }, CONFIG.TIME_DELAY);

  let scrollTriggered = false;
  window.addEventListener(
    'scroll',
    () => {
      if (scrollTriggered || Popup.isShowing) return;

      const path = window.location.pathname;
      const onCollection =
        path.includes('/collections/') &&
        !path.includes('/collections/all') &&
        path.split('/').length >= 3;
      const onCart = path.includes('/cart');

      const lastAction = sessionStorage.getItem('last_cart_action');
      const timeSince = lastAction
        ? Date.now() - parseInt(lastAction)
        : 999999;

      if (
        window.scrollY > CONFIG.SCROLL_THRESHOLD &&
        !onCollection &&
        !onCart &&
        timeSince >= 5000
      ) {
        scrollTriggered = true;
        Popup.show();
      }
    },
    { passive: true }
  );

  // ✅ IMPORTANT — CALL SWIPE HERE
  initFebruarySwipe();
}
/* ======== MOBILE SWIPE TO CLOSE (FEBRUARY POPUP) ======== */
function initFebruarySwipe() {
  const container = document.querySelector(
    '.february-promo-popup-container'
  );
  if (!container || window.innerWidth > 749) return;

  let startY = 0;
  let currentY = 0;

  container.addEventListener(
    'touchstart',
    (e) => {
      startY = e.touches[0].clientY;
    },
    { passive: true }
  );

  container.addEventListener(
    'touchmove',
    (e) => {
      currentY = e.touches[0].clientY;
      const diff = currentY - startY;

      if (diff > 0) {
        container.style.transform = `translateY(${diff}px)`;
      }
    },
    { passive: true }
  );

  container.addEventListener('touchend', () => {
    const diff = currentY - startY;

    if (diff > 100) {
      container.style.transition =
        'transform 0.45s cubic-bezier(0.32, 0, 0.67, 0)';
      container.style.transform = 'translateY(100%)';

      setTimeout(() => {
        Storage.markDismissed();
        Popup.hide();
      }, 450);
    } else {
      container.style.transition =
        'transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1)';
      container.style.transform = 'translateY(0)';
    }

    setTimeout(() => {
      container.style.transition = '';
    }, 500);
  });
}


  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>
